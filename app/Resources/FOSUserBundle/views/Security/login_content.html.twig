{% trans_default_domain 'FOSUserBundle' %}

<div class="login-page">
    <div class="form">
        <form class="register-form">
            <input type="text" placeholder="name"/>
            <input type="password" placeholder="password"/>
            <input type="text" placeholder="email address"/>
            <button>create</button>
            <p class="message">Already registered? <a href="#">Sign In</a></p>
            {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
        </form>
        <form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="text" placeholder="username" name="_username" value="{{ last_username }}" required="required"/>
            <input type="password" placeholder="password" name="_password" required="required"/>
            {% if error %}
                <div class="message error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <button >{{ 'security.login.submit'|trans }}</button>
            <p class="message">Not registered? <a href="#">Create an account</a></p>
            {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
        </form>
    </div>
</div>


